{
  "title": "mechazoidal personal",
  "rules": [
    {
      "description": "Hyper-x: focus Firefox",
      "manipulators": [
        {
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [{"shell_command": "open -a 'Firefox.app'"}],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Hyper-z: focus Zoom",
      "manipulators": [
