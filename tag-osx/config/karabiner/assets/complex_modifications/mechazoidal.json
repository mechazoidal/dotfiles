{
  "title": "mechazoidal personal",
  "rules": [
    {
      "description": "Left Control to Hyper key(shift+cmd+ctrl+opt)",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control",
            "modifiers": {"optional": ["any"]}
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Caps Lock to Escape on single press, (right)Control on press and hold.",
      "manipulators": [
        {
          "from": {"key_code": "caps_lock", "modifiers": {"optional": ["any"]}},
          "to": [{"key_code": "right_control"}],
          "to_if_alone": [{"key_code": "escape"}],
          "type": "basic"
        }
      ]
    }
  ]
}
