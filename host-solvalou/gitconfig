# This is Git's per-user configuration file.
[user]
	name = Scott Francis
	email = scott@kurokoproject.com
[push]
	default = matching
[alias]
  # Read-only share
  serve = !git daemon --reuseaddr --base-path=. --export-all ./.git --verbose
  # read/write share
  hub = !git daemon --reuseaddr --base-path=. --export-all --enable=receive-pack  --informative-errors --verbose

  # from garybernhardt
  st = status
  ci = commit --verbose
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin master
  # ds
  # dh1

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached
[core]
	excludesfile = /home/mecha/.gitignore_global
